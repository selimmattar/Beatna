<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF"
    android:outlineAmbientShadowColor="@color/av_dark_blue"
    android:backgroundTint="#eae7e7"
    >
<ImageView
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:src="@drawable/blue_circle"
    android:id="@+id/profile_img"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="aaa"
        android:textColor="#766c6c"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@id/profile_img"
        android:id="@+id/artistname_tv"
        />
    <ImageButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/profile_img"
        android:id="@+id/album_imgbtn"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/album_imgbtn"
        android:layout_below="@id/profile_img"
        android:textSize="50dp"
        android:text="aaaa"
        android:id="@+id/songname_tv"
        android:textColor="#000"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/album_imgbtn"
        android:text="jaime"
        android:id="@+id/like_btn"
        />
</RelativeLayout>